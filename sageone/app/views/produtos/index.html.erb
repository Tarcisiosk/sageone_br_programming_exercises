<p id="notice"><%= notice %></p>


<table id="example" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th width="85%">Produtos Cadastrados</th>
      <th>Opções</th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%=produto.descricao%></td>
        <td><%= link_to 'Visualizar', produto %>        
        <%= link_to 'Editar', edit_produto_path(produto) %>       
        <%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %>

<h2>Importar produtos</h2>
<%= form_tag import_produtos_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar" %>
<% end %>

<script>
  $(document).ready(function() {
     $('#example').DataTable( {
        "pagingType": "full_numbers"
    } );
  } );
</script>